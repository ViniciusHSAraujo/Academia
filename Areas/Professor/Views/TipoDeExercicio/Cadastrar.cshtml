@model Academia.Models.TipoExercicio

@{
    ViewData["Title"] = "Cadastrar";
}

<div class="card-box row mt-3">
    <div class="col-md-12">
        <form id="frmCadastroTipoDeExercicio">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row ">
                <div class="form-group col-md-6">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="GrupoMuscular" class="control-label"></label>
                    <select asp-for="GrupoMuscular" asp-items="Html.GetEnumSelectList<GrupoMuscular>()" class="form-control">
                        <option disabled selected>Selecione um grupo muscular</option>
                    </select>
                    <span asp-validation-for="GrupoMuscular" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" id="btnEnviarRequisicao" value="Cadastrar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section scripts{
    @await Html.PartialAsync("~/Views/Shared/_ValidationScriptsPartial.cshtml")
}
